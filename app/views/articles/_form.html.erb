<%= form_for @article do |f| %>

  <% if @article.nil? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(@article.errors.count, 'error') %>
      prevented this page from being saved:
    </h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.cktext_area :text, rows: 10, class: 'someclass', ckeditor: { language: 'us'} %>
     <%# f.text_area :text %> 
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
