<h2 class="col-md-1 col-md-offset-2">Comments</h2>
<% @article.comments.each do |comment| %>
  <div class="row">
    <div class="col-md-10 col-md-offset-2 commenter-list">
        <!-- <strong>Commenter:</strong> -->
        <%= comment.commenter %>
    </div>
    <div class="col-md-5 col-md-offset-2 comment-list">
      <!-- <strong>Comment:</strong> -->
      <%= comment.body %>
    </div>
  </div><!--row-->
  <div class="row">
      <%= link_to 'Delete Comment', [comment.article, comment],
          method: :delete,
          data: { confirm: 'Are you sure?' },
          class: "col-md-2 col-md-offset-2 small", id: "comment-delete" %>
  </div> <!--row-->
<% end %>
