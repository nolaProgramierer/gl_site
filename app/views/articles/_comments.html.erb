<div class="comment-section">
  <h2>Comments</h2>
  <!-- counter for comment_list_bckgrd method -->
  <% count = 1 %>
  <% @article.comments.each do |comment| %>
        <div class="commenter-list">
          <div class="commenter-name">
            <%= comment.commenter %>
            says<br>
          </div>
          <div class="small">
            <%= comment.created_at.strftime("%b %-d, %Y at %l:%M %P GMT") %>
          </div>
        </div>
        <!-- see articles_helper -->
        <div class= <%= comment_list_bckgrd(count) %>>
          <%= comment.body %>
        </div>
        <%= link_to 'Reply', [comment.article(parent_id: :comment), comment], class: "small" %> |
        <%= link_to 'Delete', [comment.article, comment],
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: "small", id: "comment-delete" %>

  <!-- for comment_list_bckgrd method -->
        <% count += 1 %>
    <% end %>
  </div>
