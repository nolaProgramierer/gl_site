<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <h2>Leave a reply</h2>
    <%= form_for([@article, @article.comments.build]) do |f| %>
      <div id="commenter-form">
        <%= f.text_field :commenter %>
        <%= f.label :commenter %>
        (required)
      </div>
      <div>
        <%= f.text_area :body, id: "comment-body" %>
        <%# f.label :body %>
      </div>
    <p>
      <%= f.submit "Submit comment" %>
    </p>
    <% end %>
  </div>
</div>
