  <div class="row social-icons" id="contact">
      <div class="col-md-6">
        <div class="col-md-6">
          <h3>Let's make some music!</h3>

          <%= form_for @contact, url: home_index_path, remote: true do |f| %>

            <%= f.label :name %></br>
            <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>

            <%= f.label :email %></br>
            <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>
        </div>
        <div class="col-md-6">
          <%= f.label :message %></br>
          <%= f.text_area :message, rows: 8, required: true, class: "contact-form-text-area",
                            placeholder: "Send a message to Glenn."%></br>

          <div class= "hidden">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
          </div>

          <%= f.submit 'Send Message', class: 'btn btn-primary' %>
        <% end %>
        </div>


